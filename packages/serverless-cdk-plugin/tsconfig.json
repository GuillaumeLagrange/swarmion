{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "composite": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "emitDeclarationOnly": true,
    "outDir": "./dist/types"
  },
  "resolveJsonModule": true,
  "exclude": ["./dist"],
  "include": ["./**/*.ts"],
  "esModuleInterop": true,
  "module": "Node16",
  "moduleResolution": "node16"
}
